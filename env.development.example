# Development Environment Configuration
# Copy this to .env for local development: cp env.development.example .env

# Server
PORT=8080
ENV=development

# Local PostgreSQL (from Docker Compose)
DATABASE_URL=postgresql://trailmemo:trailmemo_dev_password@localhost:5432/trailmemo_dev?sslmode=disable

# Firebase (replace with your actual values)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Security (generate with: openssl rand -base64 32)
JWT_SECRET=dev_secret_change_me_in_production

# Upload limits
MAX_UPLOAD_SIZE=52428800

